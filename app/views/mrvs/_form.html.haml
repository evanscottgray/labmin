= form_for @mrv do |f|
  - if @mrv.errors.any?
    #error_explanation
      %h2= "#{pluralize(@mrv.errors.count, "error")} prohibited this mrv from being saved:"
      %ul
        - @mrv.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  -#.field
    = f.label :ipv4_address
    = f.text_field :ipv4_address
  .field
    = f.label :credential_id
    = collection_select(:console_server, :credential_id, Credential.all, :id, :name)

  .actions
    = f.submit 'Save'
