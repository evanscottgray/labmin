= form_for @mrv do |f|
  - if @mrv.errors.any?
    #error_explanation
      %h2= "#{pluralize(@mrv.errors.count, "error")} prohibited this mrv from being saved:"
      %ul
        - @mrv.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :string
    = f.text_field :string
  .field
    = f.label :text
    = f.text_field :text
  .actions
    = f.submit 'Save'
