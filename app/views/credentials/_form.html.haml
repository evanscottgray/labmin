= form_for @credential do |f|
  - if @credential.errors.any?
    #error_explanation
      %h2= "#{pluralize(@credential.errors.count, "error")} prohibited this credential from being saved:"
      %ul
        - @credential.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :username
    = f.text_field :username
  .field
    = f.label :password
    = f.text_field :password
  .field
    = f.label :enable_password
    = f.text_field :enable_password
  .actions
    = f.submit 'Save'
